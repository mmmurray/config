[
  {
    "key": "cmd+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new"
  },
  {
    "key": "alt+/",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+\\",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "shift+f12",
    "command": "references-view.findReferences",
    "when": "editorHasReferenceProvider"
  },
  {
    "key": "cmd+[",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },

  // Moonlander keyboard layer (ctrl+alt+cmd modifiers)

  // ðŸ’¥ J (Placeholder for Q since can't assign shift+ctrl+alt+cmd+q)
  {
    "key": "ctrl+alt+cmd+j",
    "command": "editor.action.organizeImports",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "shift+ctrl+alt+cmd+j",
    "command": "editor.toggleFold",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+cmd+j",
    "command": "list.collapseAll",
    "when": "explorerViewletFocus"
  },

  // ðŸ’¥ W
  {
    "key": "ctrl+alt+cmd+w",
    "command": "editor.action.selectHighlights",
    "when": "editorFocus"
  },
  {
    "key": "shift+ctrl+alt+cmd+w",
    "command": "editor.action.insertCursorAtEndOfEachLineSelected",
    "when": "editorTextFocus"
  },

  // ðŸ’¥ F
  {
    "key": "ctrl+alt+cmd+f",
    "command": "editor.action.insertCursorAbove",
    "when": "editorFocus"
  },
  {
    "key": "shift+ctrl+alt+cmd+f",
    "command": "editor.action.marker.nextInFiles",
    "when": "editorTextFocus"
  },

  // ðŸ’¥ P
  {
    "key": "ctrl+alt+cmd+p",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus"
  },
  {
    "key": "shift+ctrl+alt+cmd+p",
    "command": "editor.action.moveSelectionToNextFindMatch",
    "when": "editorTextFocus"
  },

  // ðŸ’¥ G
  {
    "key": "ctrl+alt+cmd+a",
    "command": "editor.action.insertLineAfter",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "shift+ctrl+alt+cmd+a",
    "command": "editor.action.insertLineBefore",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+cmd+a",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus"
  },
  {
    "key": "shift+ctrl+alt+cmd+a",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },

  // ðŸ’¥ R
  {
    "key": "ctrl+alt+cmd+r",
    "command": "editor.action.smartSelect.shrink",
    "when": "textInputFocus && !editorReadonly"
  },

  // ðŸ’¥ S
  {
    "key": "ctrl+alt+cmd+s",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+ctrl+alt+cmd+s",
    "command": "editor.action.refactor",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+cmd+s",
    "command": "explorer.openAndPassFocus",
    "when": "explorerViewletFocus"
  },

  // ðŸ’¥ T
  {
    "key": "ctrl+alt+cmd+t",
    "command": "editor.action.smartSelect.expand",
    "when": "textInputFocus && !editorReadonly"
  },

  // ðŸ’¥ D
  {
    "key": "ctrl+alt+cmd+d",
    "command": "workbench.explorer.fileView.focus"
  },

  // ðŸ’¥ Z
  {
    "key": "ctrl+alt+cmd+z",
    "command": "editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "shift+ctrl+alt+cmd+z",
    "command": "deleteInsideWord",
    "when": "textInputFocus && !editorReadonly"
  },

  // ðŸ’¥ X
  {
    "key": "ctrl+alt+cmd+x",
    "command": "workbench.action.closeOtherEditors"
  },
  {
    "key": "shift+ctrl+alt+cmd+x",
    "command": "workbench.action.closeAllEditors"
  },

  // ðŸ’¥ C
  {
    "key": "ctrl+alt+cmd+c",
    "command": "editor.action.insertCursorBelow",
    "when": "editorFocus"
  },
  {
    "key": "shift+ctrl+alt+cmd+c",
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },

  // ðŸ’¥ V
  {
    "key": "ctrl+alt+cmd+v",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+alt+cmd+v",
    "command": "workbench.action.terminal.focus",
    "when": "editorFocus || activeEditorGroupEmpty"
  },
  {
    "key": "shift+ctrl+alt+cmd+v",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "shift+ctrl+alt+cmd+v",
    "command": "workbench.action.focusSideBar",
    "when": "!sideBarFocus"
  },

  // ðŸ’¥ B
  {
    "key": "ctrl+alt+cmd+b",
    "command": "editor.foldAllExcept"
  },
  {
    "key": "shift+ctrl+alt+cmd+b",
    "command": "editor.unfoldAll"
  },

  // Other
  {
    "key": "ctrl+alt+cmd+g",
    "command": "magit.status"
  },
  {
    "key": "alt+x g",
    "command": "-magit.status"
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+shift+-",
    "command": "-workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "ctrl+shift+-",
    "command": "workbench.action.navigateForward"
  },
  {
    "key": "ctrl+-",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.quickInputBack",
    "when": "inQuickOpen"
  },
  {
    "key": "pageup",
    "command": "cursorMove",
    "args": {
      "to": "up",
      "by": "line",
      "value": 16
    },
    "when": "editorTextFocus"
  },
  {
    "key": "pagedown",
    "command": "cursorMove",
    "args": {
      "to": "down",
      "by": "line",
      "value": 16
    },
    "when": "editorTextFocus"
  },
  {
    "key": "pageup",
    "command": "-cursorPageUp",
    "when": "textInputFocus"
  },
  {
    "key": "pagedown",
    "command": "-cursorPageDown",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+r",
    "command": "editor.action.moveCarretLeftAction"
  },
  {
    "key": "ctrl+shift+alt+cmd+t",
    "command": "editor.action.moveCarretRightAction"
  }
]
